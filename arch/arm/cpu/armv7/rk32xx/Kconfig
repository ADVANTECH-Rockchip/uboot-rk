	bool "Support rk3288 rsb4680a102-1 2G"
	select ROCKCHIP
	select ARCH_ADVANTECH
	
config PLAT_RSB4680A3_2G
	bool "Support rk3288 rsb4680a102-1 2G"
	select ROCKCHIP
	select ARCH_ADVANTECH

config PLAT_EBCRB03A1_2G
	bool "Support rk3288 ebcrb03a101-1 2G"
	select ROCKCHIP
	select ARCH_ADVANTECH

config PLAT_EBCRB03A2_2G
	bool "Support rk3288 ebcrb03a102-1 2G"
	select ROCKCHIP
	select ARCH_ADVANTECH

config PLAT_USM110A2_2G
	bool "Support rk3288 usm110a102-1 2G"
	select ROCKCHIP
	select ARCH_ADVANTECH

config PLAT_USC130160A1_2G
	bool "Support rk3288 usc130160a101-1 2G"
	select ROCKCHIP
	select ARCH_ADVANTECH

endchoice


config SYS_CPU
	default "armv7"

config SYS_SOC
	default "rk32xx"

source "board/rockchip/rk32xx/Kconfig"
